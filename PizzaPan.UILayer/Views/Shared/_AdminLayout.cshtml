@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>Sidebar 09</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/sidebar-09/css/style.css">
</head>
<body>

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-primary">
                </button>
            </div>
            <div class="img bg-wrap text-center py-4" style="background-image: url(/sidebar-09/images/bg_1.jpg);">
                <div class="user-logo">
                    <div class="img" style="background-image: url(/pizzapan-starter/assets/images/pizza.png);"></div>
                    <h3>PizzaPan Admin</h3>
                </div>
            </div>
            <ul class="list-unstyled components mb-5">
                <li class="active">
                    <a asp-controller="Admin" asp-action="Index"><span class="fa fa-home mr-3"></span> Dashboard</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Category" asp-action="Index"><span class="fa fa-gift mr-3"></span>Kategoriler</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Discount" asp-action="Index"><span class="fa fa-gift mr-3"></span>İndirim Kodu</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Product" asp-action="Index"><span class="fa fa-gift mr-3"></span>Mevcut Ürünler</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Contact" asp-action="Index"><span class="fa fa-gift mr-3"></span>Mesajlar</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="ProductImage" asp-action="ImageList"><span class="fa fa-photo mr-3"></span>Ürün Resimleri</a>
                </li>
                <li>
                    <a asp-controller="OurTeam" asp-action="Index"><span class="fa fa-support mr-3"></span> Personeller</a>
                </li>
               @* <li>
                    <a href="#"><span class="fa fa-support mr-3"></span> İstatistikler</a>
                </li>
                <li>
                    <a href="#"><span class="fa fa-support mr-3"></span> Ayarlar</a>
                </li>*@
                <li>
                    <a asp-controller="Login" asp-action="Logout"><span class="fa fa-sign-out mr-3"></span> Çıkış Yap</a>
                </li>
            </ul>

        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">
            @RenderBody()
        </div>
    </div>
    <script src="~/sidebar-09/js/jquery.min.js"></script>
    <script src="~/sidebar-09/js/popper.js"></script>
    <script src="~/sidebar-09/js/bootstrap.min.js"></script>
    <script src="~/sidebar-09/js/main.js"></script>
</body>
</html>