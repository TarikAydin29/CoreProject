@model List<PizzaPan.EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>

<a class="btn btn-outline-primary mb-2" asp-action="Add">Yeni Kategori Oluştur</a>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Kategori Ürünleri</th>
        <th>Sitede Gör</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.Name</td>
            <td><a href="#" class="btn btn-outline-info">Kategori Ürünleri</a></td>
            <td><a href="#" class="btn btn-outline-warning">Sitede Gör</a></td>
            <td><a href="/Category/Update/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Category/Delete/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>