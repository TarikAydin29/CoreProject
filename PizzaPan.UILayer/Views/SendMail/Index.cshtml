@model MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Mail Gönderme</h1>

<form method="post">
    <label>Alıcı Mail Adresi</label>
    <input type="email" class="form-control" asp-for="ReceverMail" />
    <br />
    <label>Konu</label>
    <input type="text" class="form-control" asp-for="Subject" />
    <br />
    <label>Mesaj</label>
    <textarea rows="5" class="form-control" asp-for="MessageContent"></textarea>
    <br />
    <button class="btn btn-outline-danger" type="submit">Mesaj Gönder</button>
</form>